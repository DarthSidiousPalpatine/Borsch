package com.muurr.tfcplusborscht;

import com.dunk.tfc.Core.FluidBaseTFC;
import com.dunk.tfc.Core.TFCTabs;
import com.dunk.tfc.Food.ItemFoodTFC;
import com.dunk.tfc.Items.ItemDrink;
import com.dunk.tfc.Items.Tools.ItemCustomBucketMilk;
import com.dunk.tfc.api.TFCFluids;
import com.dunk.tfc.api.TFCItems;
import com.dunk.tfc.api.Crafting.BarrelFireRecipe;
import com.dunk.tfc.api.Crafting.BarrelManager;
import com.dunk.tfc.api.Enums.EnumFoodGroup;

import cpw.mods.fml.common.registry.GameRegistry;
import net.minecraft.init.Items;
import net.minecraft.item.Item;
import net.minecraft.item.ItemStack;
import net.minecraftforge.fluids.Fluid;
import net.minecraftforge.fluids.FluidRegistry;
import net.minecraftforge.fluids.FluidStack;

public class ItemSetup extends TFCItems{
	public static Item clayBucketBorscht;
	public static Item woodenBucketBorscht;
	public static Item borscht;
	
	public static Item clayBucketKvass;
	public static Item woodenBucketKvass;
	public static Item kvass;
	
	public static Item clayBucketChickenSoup;
	public static Item woodenBucketChickenSoup;
	public static Item chickensoup;
	
	public static Item clayBucketOkroshka;
	public static Item woodenBucketOkroshka;
	public static Item okroshka;
	
	public static void setup()
	{
		woodenBucketBorscht = new ItemCustomBucketMilk().setUnlocalizedName("Wooden Bucket Borscht").setContainerItem(woodenBucketEmpty).setCreativeTab(TFCTabs.TFC_FOODS);
		clayBucketBorscht = new ItemCustomBucketMilk().setUnlocalizedName("Clay Bucket Borscht").setContainerItem(woodenBucketEmpty).setCreativeTab(TFCTabs.TFC_FOODS);
		borscht = new ItemDrink(1000).setFoodGroup(EnumFoodGroup.Vegetable).setCalories(0.500f).setWaterRestoreRatio(1f).setUnlocalizedName("Borscht").setCreativeTab(TFCTabs.TFC_FOODS);
		GameRegistry.registerItem(woodenBucketBorscht, woodenBucketBorscht.getUnlocalizedName());
		GameRegistry.registerItem(clayBucketBorscht, clayBucketBorscht.getUnlocalizedName());
		GameRegistry.registerItem(borscht, borscht.getUnlocalizedName());
		
		woodenBucketKvass = new ItemCustomBucketMilk().setUnlocalizedName("Wooden Bucket Kvass").setContainerItem(woodenBucketEmpty).setCreativeTab(TFCTabs.TFC_FOODS);
		clayBucketKvass = new ItemCustomBucketMilk().setUnlocalizedName("Clay Bucket Kvass").setContainerItem(woodenBucketEmpty).setCreativeTab(TFCTabs.TFC_FOODS);
		kvass = new ItemDrink(1000).setFoodGroup(EnumFoodGroup.Grain).setCalories(0.200f).setWaterRestoreRatio(1f).setUnlocalizedName("Kvass").setCreativeTab(TFCTabs.TFC_FOODS);
		GameRegistry.registerItem(woodenBucketKvass, woodenBucketKvass.getUnlocalizedName());
		GameRegistry.registerItem(clayBucketKvass, clayBucketKvass.getUnlocalizedName());
		GameRegistry.registerItem(kvass, kvass.getUnlocalizedName());
		
		woodenBucketChickenSoup = new ItemCustomBucketMilk().setUnlocalizedName("Wooden Bucket Chicken Soup").setContainerItem(woodenBucketEmpty).setCreativeTab(TFCTabs.TFC_FOODS);
		clayBucketChickenSoup = new ItemCustomBucketMilk().setUnlocalizedName("Clay Bucket Chicken Soup").setContainerItem(woodenBucketEmpty).setCreativeTab(TFCTabs.TFC_FOODS);
		chickensoup = new ItemDrink(1000).setFoodGroup(EnumFoodGroup.Protein).setCalories(0.750f).setWaterRestoreRatio(1f).setUnlocalizedName("Chicken Soup").setCreativeTab(TFCTabs.TFC_FOODS);
		GameRegistry.registerItem(woodenBucketChickenSoup, woodenBucketChickenSoup.getUnlocalizedName());
		GameRegistry.registerItem(clayBucketChickenSoup, clayBucketChickenSoup.getUnlocalizedName());
		GameRegistry.registerItem(chickensoup, chickensoup.getUnlocalizedName());
		
		woodenBucketOkroshka = new ItemCustomBucketMilk().setUnlocalizedName("Wooden Bucket Okroshka").setContainerItem(woodenBucketEmpty).setCreativeTab(TFCTabs.TFC_FOODS);
		clayBucketOkroshka = new ItemCustomBucketMilk().setUnlocalizedName("Clay Bucket Okroshka").setContainerItem(woodenBucketEmpty).setCreativeTab(TFCTabs.TFC_FOODS);
		okroshka = new ItemDrink(1000).setFoodGroup(EnumFoodGroup.Dairy).setCalories(0.500f).setWaterRestoreRatio(1f).setUnlocalizedName("Okroshka").setCreativeTab(TFCTabs.TFC_FOODS);
		GameRegistry.registerItem(woodenBucketOkroshka, woodenBucketOkroshka.getUnlocalizedName());
		GameRegistry.registerItem(clayBucketOkroshka, clayBucketOkroshka.getUnlocalizedName());
		GameRegistry.registerItem(okroshka, okroshka.getUnlocalizedName());
		
		drinks.add((ItemDrink) borscht);
		BarrelManager.getInstance().addRecipe(new BarrelFireRecipe(ItemFoodTFC.createTag(new ItemStack(TFCItems.cabbage), 60), new FluidStack(TFCFluids.FRESHWATER, 1000), null, new FluidStack(Proxy.BORSCHT, 1500), 0, 250)
				.setFireTicksScale(true).setSealedRecipe(false).setRemovesLiquid(false));
		
		drinks.add((ItemDrink) kvass);
		BarrelManager.getInstance().addRecipe(new BarrelFireRecipe(ItemFoodTFC.createTag(new ItemStack(TFCItems.ryeBread), 60), new FluidStack(TFCFluids.FRESHWATER, 1000), null, new FluidStack(Proxy.KVASS, 1500), 0, 250)
				.setFireTicksScale(true).setSealedRecipe(false).setRemovesLiquid(false));
		
		drinks.add((ItemDrink) chickensoup);
		BarrelManager.getInstance().addRecipe(new BarrelFireRecipe(ItemFoodTFC.createTag(new ItemStack(TFCItems.chickenRaw), 60), new FluidStack(TFCFluids.FRESHWATER, 1000), null, new FluidStack(Proxy.CHICKENSOUP, 1500), 0, 250)
				.setFireTicksScale(true).setSealedRecipe(false).setRemovesLiquid(false));
		
		drinks.add((ItemDrink) okroshka);
		BarrelManager.getInstance().addRecipe(new BarrelFireRecipe(ItemFoodTFC.createTag(new ItemStack(TFCItems.eggCooked), 60), new FluidStack(TFCFluids.MILKCURDLED, 1000), null, new FluidStack(Proxy.OKROSHKA, 1500), 0, 250)
				.setFireTicksScale(true).setSealedRecipe(false).setRemovesLiquid(false));
	}
}
